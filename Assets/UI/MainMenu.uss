.menu_button {
    font-size: 400%;
    background-image: url('project://database/Assets/UI/Art/UI/_Btn%20Preview/BackgroundKeyboard.png?fileID=21300000&guid=2a07db719ef564c43939d7dc7c659953&type=3#BackgroundKeyboard');
    -unity-slice-left: 16;
    -unity-slice-top: 16;
    -unity-slice-right: 16;
    -unity-slice-bottom: 16;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    padding-bottom: 1%;
    padding-top: 1%;
    text-shadow: 1px 1px 2px rgb(58, 36, 0);
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    transition-duration: 0.5s;
    padding-left: 2%;
    padding-right: 2%;
}

.menu_button:hover {
    font-size: 400%;
    background-image: url('project://database/Assets/UI/Art/UI/_Btn%20Preview/BackgroundKeyboard.png?fileID=21300000&guid=2a07db719ef564c43939d7dc7c659953&type=3#BackgroundKeyboard');
    -unity-slice-left: 16;
    -unity-slice-top: 16;
    -unity-slice-right: 16;
    -unity-slice-bottom: 16;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    text-shadow: 1px 1px 2px rgb(58, 36, 0);
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    transition-duration: 0.5s;
    scale: 1.15 1.15;
    transition-timing-function: ease-out-bounce;
    -unity-background-image-tint-color: rgba(255, 226, 177, 255);
}

.menu_button:active {
    font-size: 400%;
    background-image: url('project://database/Assets/UI/Art/UI/_Btn%20Preview/BackgroundKeyboard.png?fileID=21300000&guid=2a07db719ef564c43939d7dc7c659953&type=3#BackgroundKeyboard');
    -unity-slice-left: 16;
    -unity-slice-top: 16;
    -unity-slice-right: 16;
    -unity-slice-bottom: 16;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    text-shadow: 1px 1px 2px rgb(58, 36, 0);
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    transition-duration: 0.25s;
    scale: 1.2 1.15;
    transition-timing-function: ease-out-back;
    -unity-background-image-tint-color: rgba(255, 202, 159, 255);
}
